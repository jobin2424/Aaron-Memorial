<% layout('layouts/boilerplate') %>



<div class="row">
<h1 class="text-center">Edit Team</h1>
<div class="col-6 offset-3">
<form action="/teams/<%=teams._id %>?_method=PUT " method="post" enctype="multipart/form-data" novalidate class="validated-form" >

    <div class="mb-3"> 
        <label class="form-label" for="title">Team name</label>
        <input class="form-control" type="text" id="title" name="team[team]" value="<%=teams.team%>" required>
    </div>
 <div class="mb-3">
  <label for="formFile" class="form-label">Edit Team Logo</label>
  <input class="form-control" type="file" id="formFile" name="image"> 
</div>

<div class="mb-3"><button class="btn btn-primary">Edit Team</button></div>


</form>
<a href="/teams">back to all teams</a>
</div>

</div>
