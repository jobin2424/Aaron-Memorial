<% layout('layouts/boilerplate') %>

<div class="row">
<h1 class="text-center">New Team</h1>
<div class="col-6 offset-3">
<form action="/teams" method="post" novalidate class="validated-form" enctype="multipart/form-data">

    <div class="mb-3"> 
        <label class="form-label" for="title">Team name</label>
        <input class="form-control" type="text" id="title" name="team[team]" required>
      <div class="valid-feedback">
         Looks Good!
      </div>
    </div>
 <div class="mb-3">
  <label for="formFile" class="form-label">Upload Team Logo</label>
  <input class="form-control" type="file" id="formFile" name="image" required>
</div>
<div class="mb-3"><button class="btn btn-primary">add Team</button></div>


</form>
<a href="/teams">back to all teams</a>
</div>

</div>





